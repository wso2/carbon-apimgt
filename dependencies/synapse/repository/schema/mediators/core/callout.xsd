<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified"
           targetNamespace="http://ws.apache.org/ns/synapse"
           xmlns="http://ws.apache.org/ns/synapse">

    <xs:element name="callout">
        <xs:annotation>
            <xs:documentation source="description">
                Callout mediator to do a blocking send or a callout to a service
            </xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:choice maxOccurs="3">
                <xs:element name="source" minOccurs="0" maxOccurs="1">
                    <xs:annotation>
                        <xs:documentation>
                            The source for the callout
                        </xs:documentation>
                    </xs:annotation>
                    <xs:complexType>
                        <xs:attribute name="xpath" type="xs:int" use="optional"/>
                        <xs:attribute name="key" type="xs:int" use="optional"/>
                    </xs:complexType>
                </xs:element>
                <xs:element name="target" minOccurs="0" maxOccurs="1">
                    <xs:annotation>
                        <xs:documentation>
                            The target for the callout response
                        </xs:documentation>
                    </xs:annotation>
                    <xs:complexType>
                        <xs:attribute name="xpath" type="xs:int" use="optional"/>
                        <xs:attribute name="key" type="xs:int" use="optional"/>
                    </xs:complexType>
                </xs:element>
                <xs:element name="configuration" maxOccurs="1" minOccurs="0">
                    <xs:complexType>
                        <xs:attribute name="axis2XML" type="xs:string" use="optional"/>
                        <xs:attribute name="repository" type="xs:string" use="optional"/>
                    </xs:complexType>
                </xs:element>
            </xs:choice>
            <xs:attribute name="serviceURL" type="xs:string" use="required"/>
            <xs:attribute name="action" type="xs:string" use="optional"/>
        </xs:complexType>
    </xs:element>

</xs:schema>