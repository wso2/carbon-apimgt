        <ul>
            {{#each scopes}}
            <li>
                <h6><a data-index='{{idx}}' class='delete_scope'><i class='icon-trash'></i></a> &nbsp;&nbsp; {{ key }} : {{ name }}  </h6>
                <p>{{ description }}</p>
            </li>
