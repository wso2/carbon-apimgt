 var isSynapseGateway = mod.isSynapseGateway().isSynapseGateway;
 var isDataPublishingEnabled = mod.isDataPublishingEnabled().isDataPublishingEnabled;
 var isSuperTenant = jagg.getUser().isSuperTenant;
