        }<% if(
        (i+1) != resourceTiers.length){%>,<%}%>
        <% } %>
    ];

    var DEFAULT_TIER = "<%=encode.forJavaScript(String(default_tier))%>";
    var DEFAULT_AUTH = "Application & Application User";
