                   $("#environmentsRetry-modal").modal('hide');
                   $( "body" ).trigger( "api_saved" );
                   location.href = "<%= jagg.url("/info?"+ apiUrlId ) %>";
                }else{
                   location.href = "<%= jagg.url("/info?"+ apiUrlId ) %>";
                }
            }
            </script>
        </div>
      </div>
    </div>
