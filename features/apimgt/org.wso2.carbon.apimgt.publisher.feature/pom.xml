<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2.carbon.apimgt</groupId>
        <artifactId>apimgt-feature</artifactId>
        <version>6.8.230-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>org.wso2.carbon.apimgt.publisher.feature</artifactId>
    <packaging>pom</packaging>
    <name>WSO2 Carbon - API Publisher Feature</name>
    <url>http://wso2.org</url>
    <description>This feature contains the core bundles required for API management back end
    </description>

    <build>
        <plugins>
            <plugin>
                <groupId>org.wso2.maven</groupId>
                <artifactId>carbon-p2-plugin</artifactId>
                <version>${carbon.p2.plugin.version}</version>
                <executions>
                    <execution>
                        <id>4-p2-feature-generation</id>
                        <phase>package</phase>
                        <goals>
                            <goal>p2-feature-gen</goal>
                        </goals>
                        <configuration>
                            <id>org.wso2.carbon.apimgt.publisher</id>
                            <propertiesFile>../../etc/feature.properties</propertiesFile>
                            <adviceFile>
                                <properties>
                                    <propertyDef>org.wso2.carbon.p2.category.type:server
                                    </propertyDef>
                                    <propertyDef>org.eclipse.equinox.p2.type.group:false
                                    </propertyDef>
                                </properties>
                            </adviceFile>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.5.0</version>
                <executions>
                    <execution>
                        <id>install lerna dependencies</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <phase>initialize</phase>
                        <configuration>
                            <workingDirectory>../</workingDirectory>
                            <executable>${npm.executable}</executable>
                            <arguments>
                                <argument>ci</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>lerna clean</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <phase>initialize</phase>
                        <configuration>
                            <workingDirectory>../</workingDirectory>
                            <executable>${npm.executable}</executable>
                            <arguments>
                                <argument>run</argument>
                                <argument>clean</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>lerna bootstrap</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <phase>initialize</phase>
                        <configuration>
                            <workingDirectory>../</workingDirectory>
                            <executable>${npm.executable}</executable>
                            <arguments>
                                <argument>run</argument>
                                <argument>bootstrap</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>npm run build (compile)</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <phase>compile</phase>
                        <configuration>
                            <workingDirectory>src/main/resources/publisher</workingDirectory>
                            <executable>${npm.executable}</executable>
                            <arguments>
                                <argument>run</argument>
                                <argument>${npm.build.command}</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>npm run test</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <phase>test</phase>
                        <configuration>
                            <workingDirectory>src/main/resources/publisher</workingDirectory>
                            <executable>${npm.executable}</executable>
                            <arguments>
                                <argument>${npm.test.command}</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
                <configuration>
                    <workingDirectory>${npm.working.dir}</workingDirectory>
                </configuration>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>publisher/site/**</include>
                    <include>publisher/services/**</include>
                    <include>publisher/jaggery.conf</include>
                    <include>publisher/source/**</include>
                    <include>publisher/override/**</include>
                    <include>publisher/.eslintignore</include>
                    <include>publisher/.eslintrc.js</include>
                    <include>publisher/.npmrc</include>
                    <include>publisher/babel.config.js</include>
                    <include>publisher/jest.config.js</include>
                    <include>publisher/jsconfig.json</include>
                    <include>publisher/loader.js</include>
                    <include>publisher/package-lock.json</include>
                    <include>publisher/package.json</include>
                    <include>publisher/webpack.config.js</include>
                    <include>publisher/Readme.txt</include>
                    <include>lifecycles/APILifeCycle.xml</include>
                    <include>p2.inf</include>
                    <include>apipublisher/**</include>
                    <include>customTheme/**</include>
                    <include>publisher-old/**</include>
                </includes>
            </resource>
        </resources>
    </build>
    <properties>
        <maven.test.skip>false</maven.test.skip>
        <npm.executable>npm</npm.executable>
        <npm.build.command>build:prod</npm.build.command>
        <npm.test.command>test</npm.test.command>
        <npm.working.dir>./src/main/</npm.working.dir>
    </properties>

</project>
