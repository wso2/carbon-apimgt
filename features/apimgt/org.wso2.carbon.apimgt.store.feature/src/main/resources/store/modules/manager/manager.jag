var getHTTPsURL = function() {
    var url = request.getRequestURL();
    var match = getLocation(url);
    var host = match.host;
    if (site.reverseProxy.enabled != "auto") {
        host = validateHostName(match, host);
    }
    return getAPIStoreObj().getHTTPsURL(host);
};

