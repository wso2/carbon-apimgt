                        "api": api,
                        "deniedTiers": deniedTiers,
                        "applications": list,
                        "user": user,
                        "uriTemplates": uriTemplates,
                        "isRatingActivated": isRatingActivated,
                        "isGlobalCEPEnabled": isGlobalCEPEnabled,
                        "tabs": {
