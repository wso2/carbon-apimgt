<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <artifactId>org.wso2.carbon.apimgt.web.store.feature</artifactId>
    <packaging>carbon-feature</packaging>

    <name>WSO2 API Manager - Web - Apps - Store</name>
    <url>http://wso2.org</url>

    <parent>
        <groupId>org.wso2.carbon.apimgt</groupId>
        <artifactId>web-parent</artifactId>
        <version>7.0.41-SNAPSHOT</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>

    <dependencies>
        <!--UUF Components-->
        <dependency>
            <groupId>org.wso2.carbon.apimgt</groupId>
            <artifactId>org.wso2.carbon.apimgt.web.store.theme.default</artifactId>
            <type>zip</type>
            <classifier>uuf-theme</classifier>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.uuf.common</groupId>
            <artifactId>org.wso2.carbon.uuf.common.foundation.ui</artifactId>
            <type>zip</type>
            <classifier>uuf-component</classifier>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.apimgt</groupId>
            <artifactId>org.wso2.carbon.apimgt.auth.ui</artifactId>
            <type>zip</type>
            <classifier>uuf-component</classifier>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.apimgt</groupId>
            <artifactId>org.wso2.carbon.apimgt.authenticator</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.apimgt</groupId>
            <artifactId>org.wso2.carbon.apimgt.publisher.commons.ui</artifactId>
            <type>zip</type>
            <classifier>uuf-component</classifier>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.wso2.carbon.uuf.maven</groupId>
                <artifactId>carbon-uuf-maven-plugin</artifactId>
                <version>${carbon-uuf-maven-plugin.version}</version>
                <extensions>true</extensions>
                <executions>
                    <execution>
                        <id>create</id>
                        <phase>package</phase>
                        <goals>
                            <goal>create-app</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
