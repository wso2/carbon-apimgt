{{#fillZone "content"}}
    <div class="page-header">
        <h1>{{t "api-store.application.list"}}</h1>
    </div>


        <p>An application is a logical collection of APIs. Applications allow you to use a single access token to invoke
            a collection of APIs and to subscribe to one API multiple times with different SLA levels. The
            DefaultApplication is pre-created and allows unlimited access by default.</p>

        <div id="application-list">
            <div id="application-table-nodata" class="hide message message-info">
                <h4><i class="icon fw fw-info"></i>No Applications</h4>

                <p>No applications yet. Click Add Applications in the action bar to add an application.</p>
            </div>

            <div id="application-table-wrap" class="white-wrapper add-padding-5x">
                <div id="application-table_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                    <div class="dataTablesTop">
                        <div id="application-table_filter" class="dataTables_filter"><label><i
                                class="fw fw-search search-icon"></i><input type="search" class="form-control"
                                                                            placeholder="Filter by ..."
                                                                            aria-controls="application-table"></label>
                        </div>
                        <div class="dataTables_toolbar"></div>
                    </div>
                    <div id="application-table_processing" class="dataTables_processing" style="display: none;">
                        Processing...
                    </div>
                    <table id="application-table"
                           class="table table-striped table-hover table-bordered display data-table dataTable no-footer"
                           cellspacing="0" role="grid" aria-describedby="application-table_info">
                        <thead>
                        <tr role="row">
                            <th class="sorting_asc" tabindex="0" aria-controls="application-table" rowspan="1"
                                colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending">
                                Name
                            </th>
                            <th class="col-md-2 sorting" tabindex="0" aria-controls="application-table" rowspan="1"
                                colspan="1" aria-label="Tier: activate to sort column ascending">Tier
                            </th>
                            <th class="col-md-2 sorting" tabindex="0" aria-controls="application-table" rowspan="1"
                                colspan="1" aria-label="Workflow Status: activate to sort column ascending">Workflow
                                Status
                            </th>
                            <th class="col-md-2 sorting" tabindex="0" aria-controls="application-table" rowspan="1"
                                colspan="1" aria-label="Subscriptions: activate to sort column ascending">Subscriptions
                            </th>
                            <th class="col-md-3 sorting" tabindex="0" aria-controls="application-table" rowspan="1"
                                colspan="1" aria-label="Actions: activate to sort column ascending">Actions
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr role="row" class="odd">
                            <td class="sorting_1">
                                <a title="applications"
                                   href="/store/application/DefaultApplication/">DefaultApplication</a>
                            </td>
                            <td>Unlimited</td>
                            <td>ACTIVE</td>
                            <td>1</td>
                            <td>
                                <a title="View" href="/store/application/DefaultApplication"
                                   class="btn  btn-sm padding-reduce-on-grid-view">
      <span class="fw-stack">
          <i class="fw fw-ring fw-stack-2x"></i>
          <i class="fw fw-view fw-stack-1x"></i>
      </span>
                                    <span class="hidden-xs">View</span>
                                </a>
                                <a title="Edit" href="/store/application/edit"
                                   class="btn  btn-sm padding-reduce-on-grid-view">
      <span class="fw-stack">
          <i class="fw fw-ring fw-stack-2x"></i>
          <i class="fw fw-edit fw-stack-1x"></i>
      </span>
                                    <span class="hidden-xs">Edit</span>
                                </a>
                                <a title="Delete" href="#" data-id="DefaultApplication" data-count="1"
                                   class="btn btn-sm padding-reduce-on-grid-view deleteApp">
      <span class="fw-stack">
          <i class="fw fw-ring fw-stack-2x"></i>
          <i class="fw fw-delete fw-stack-1x"></i>
      </span>
                                    <span class="hidden-xs">Delete</span>
                                </a>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                    <div class="dataTablesBottom">
                        <div class="dataTables_length" id="application-table_length"><label>Show <select
                                name="application-table_length" aria-controls="application-table"
                                class="form-control input-sm">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select> entries</label></div>
                        <div class="dataTables_info" id="application-table_info" role="status" aria-live="polite">
                            Showing 1 to 1 of 1 entries
                        </div>
                        <div class="dataTables_paginate paging_simple_numbers" id="application-table_paginate">
                            <ul class="pagination">
                                <li class="paginate_button previous disabled" id="application-table_previous"><a
                                        href="#" aria-controls="application-table" data-dt-idx="0"
                                        tabindex="0">Previous</a></li>
                                <li class="paginate_button active"><a href="#" aria-controls="application-table"
                                                                      data-dt-idx="1" tabindex="0">1</a></li>
                                <li class="paginate_button next disabled" id="application-table_next"><a href="#"
                                                                                                         aria-controls="application-table"
                                                                                                         data-dt-idx="2"
                                                                                                         tabindex="0">Next</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>






{{/fillZone}}