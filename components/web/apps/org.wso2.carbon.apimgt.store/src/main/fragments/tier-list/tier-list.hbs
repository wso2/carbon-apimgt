<div class="form-group" id="tier-list">
    <label for="tiers-list" class="hidden-xs">{{i18n "Tiers"}}</label>
    <select id="tiers-list" name="tiers-list" class="form-control">
        {{#each @params.policies}}
            <option title="{{this}}"
                    data-content="<span><strong>{{this}}</strong><br />{{this}}</span>"
                    value="{{this}}">{{this}}
            </option>
        {{/each}}
    </select>
</div>
<button type="button" id="subscribe-button"
    {{#unless @params.policies}}
        disabled="disabled"
    {{/unless}}
        class="btn btn-primary btn-mobile">
                                    <span class="icon fw-stack">
                                        <i class="fw fw-subscribe fw-stack-1x"></i>
                                        <i class="fw fw-circle-outline fw-stack-2x"></i>
                                    </span>
    {{i18n "Subscribe"}}
    {{#unless @params.policies}}
        <span id="subsBtnDesc" class="help-block">{{i18n "You may not be entitled to any of the available tiers"}}</span>
    {{/unless}}
</button>