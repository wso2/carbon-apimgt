{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "category": {
      "type": "string",
      "enum": [
        "Mediation",
        "Security"
      ]
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "displayName": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "applicableFlows": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "request",
          "response",
          "fault"
        ]
      },
      "minItems": 1
    },
    "supportedGateways": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "Synapse",
          "ChoreoConnect",
          "AWS"
        ]
      },
      "minItems": 1
    },
    "supportedApiTypes": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "string",
            "enum": [
              "HTTP",
              "SOAP",
              "SOAPTOREST",
              "GRAPHQL"
            ]
          },
          {
            "type": "object",
            "properties": {
              "apiType": {
                "type": "string",
                "enum": [
                  "HTTP",
                  "SOAP",
                  "SOAPTOREST",
                  "GRAPHQL"
                ]
              },
              "subType": {
                "type": "string",
                "enum": [
                  "AIAPI"
                ]
              }
            }
          }
        ]
      },
      "minItems": 1
    },
    "policyAttributes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "displayName": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string"
          },
          "validationRegex": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "String",
              "Boolean",
              "Integer",
              "Enum",
              "Map",
              "JSON"
            ]
          },
          "defaultValue": {
            "type": ["integer", "string", "boolean"]
          },
          "allowedValues": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "required": {
            "type": "boolean"
          }
        },
        "required": [
          "name",
          "displayName",
          "type",
          "required"
        ]
      }
    }
  },
  "required": [
    "category",
    "name",
    "displayName",
    "version",
    "applicableFlows",
    "supportedGateways",
    "supportedApiTypes"
  ]
}