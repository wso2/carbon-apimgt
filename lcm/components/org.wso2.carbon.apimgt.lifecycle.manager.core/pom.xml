<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>lcm</artifactId>
        <groupId>org.wso2.carbon.apimgt</groupId>
        <version>7.0.0-SNAPSHOT</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>org.wso2.carbon.apimgt.lifecycle.manager.core</artifactId>

    <packaging>bundle</packaging>
    <name>WSO2 Carbon - API Management - Life Cycles BE</name>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>create-test-database</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <path id="h2.classpath">
                                    <path refid="maven.compile.classpath" />
                                </path>
                                <echo message="########### Create Test Database ##############" />
                                <sql driver="org.h2.Driver"
                                     url="jdbc:h2:${basedir}/target/repository/database/WSO2LifecycleDB"
                                     userid="wso2carbon" password="wso2carbon" autocommit="true" onerror="continue">
                                    <classpath>
                                        <path refid="h2.classpath" />
                                    </classpath>
                                    <fileset file="${basedir}/src/test/resources/dbscripts/h2.sql" />

                                </sql>
                                <echo message="##################### END ########################" />
                            </tasks>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.12</version>
                <configuration>
                    <systemProperties>
                        <property>
                            <name>LCManagerDBConfigurationPath</name>
                            <value>${basedir}/src/test/resources/lcConfig.xml</value>
                        </property>
                        <property>
                            <name>LCConfigPath</name>
                            <value>${basedir}/src/test/resources/lifecycles</value>
                        </property>
                        <property>
                            <name>carbon.home</name>
                            <value>${basedir}/src/test/resources/</value>
                        </property>

                    </systemProperties>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>${slf4j.version}</version>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.eclipse.osgi</groupId>
            <artifactId>org.eclipse.osgi.services</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.apimgt</groupId>
            <artifactId>org.wso2.carbon.apimgt.lifecycle.manager.sql</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>com.h2database.wso2</groupId>
            <artifactId>h2-database-engine</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>org.eclipse.osgi</groupId>
                    <artifactId>org.eclipse.osgi</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>commons-logging</groupId>
                    <artifactId>commons-logging</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <!--Used to run unit tests pointing to mysql database.-->
        <!--<dependency>-->
        <!--<groupId>mysql</groupId>-->
        <!--<artifactId>mysql-connector-java</artifactId>-->
        <!--<version>5.1.6</version>-->
        <!--</dependency>-->
        <!-- Used to run unit tests pointing to postgresql database -->
        <!--<dependency>-->
            <!--<groupId>org.postgresql</groupId>-->
            <!--<artifactId>postgresql</artifactId>-->
            <!--<version>9.4.1211.jre7</version>-->
        <!--</dependency>-->

        <!-- ORACLE database driver -->
        <dependency>
            <groupId>com.oracle</groupId>
            <artifactId>ojdbc6</artifactId>
            <version>11.2.0.3</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.datasources</groupId>
            <artifactId>org.wso2.carbon.datasource.core</artifactId>
        </dependency>

        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <scope>test</scope>
        </dependency>


    </dependencies>
    <properties>
        <private.package>org.wso2.carbon.apimgt.lifecycle.manager.core.internal.*,</private.package>
        <export.package>
            !org.wso2.carbon.apimgt.lifecycle.manager.core.internal.*,
            org.wso2.carbon.apimgt.lifecycle.manager.*,
        </export.package>
        <import.package>
            org.osgi.framework.*;version="${osgi.framework.import.version.range}",
            org.slf4j.*;version="${slf4j.logging.package.import.version.range}",
            org.osgi.service.jndi; version="[1.0.0,2.0.0)",
            javax.xml;
            javax.xml.xpath; version=0.0.0,
            javax.xml.namespace; version=0.0.0,
            javax.xml.parsers; version=0.0.0,
            javax.xml.transform.*; version=0.0.0,
            org.apache.commons*; version=1.2.0,
            javax.xml.validation; version=0.0.0,
            org.w3c.dom; version=0.0.0,
            org.osgi.service.component; version=1.7.0
            javax.naming*; version=0.0.0,
            javax.sql; version=0.0.0,
            org.xml.sax; version=0.0.0,
            *;
        </import.package>
    </properties>

</project>